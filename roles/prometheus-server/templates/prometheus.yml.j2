global:
  scrape_interval: 30s
  scrape_timeout: 15s
  evaluation_interval: 30s
alerting:
  alertmanagers:
  - follow_redirects: true
    enable_http2: true
    scheme: http
    timeout: 15s
    api_version: v2
    static_configs:
    - targets: []
scrape_configs:
- job_name: prometheus
  honor_timestamps: true
  scrape_interval: 30s
  scrape_timeout: 15s
  metrics_path: /metrics
  scheme: http
  follow_redirects: true
  enable_http2: true
  static_configs:
  - targets: ['localhost:9100']
- job_name: node-exporter
  honor_timestamps: true
  scrape_interval: 30s
  scrape_timeout: 15s
  metrics_path: /metrics
  scheme: http
  follow_redirects: true
  enable_http2: true
  static_configs:
  - targets: ['localhost:9100']
    labels:
      node: {{ inventory_hostname }}
{% for host in groups['all'] %}
{% if inventory_hostname != host %}
  - targets: ['{{ host }}:9100']
    labels:
      node: {{ host }}
{% endif %}
{% endfor %}
- job_name: caddy-server
  honor_timestamps: true
  scrape_interval: 30s
  scrape_timeout: 15s
  metrics_path: /metrics
  scheme: http
  follow_redirects: true
  enable_http2: true
  static_configs:
{% for host in groups['caddyservers'] %}
  - targets: ['caddy.{{ host }}']
    labels:
      node: {{ host }}
{% endfor %}
- job_name: adguard-exporter
  honor_timestamps: true
  scrape_interval: 30s
  scrape_timeout: 15s
  metrics_path: /metrics
  scheme: http
  follow_redirects: true
  enable_http2: true
  static_configs:
  - targets: ['adguard.fsicardi.ar:9617']
- job_name: speedtest-exporter
  honor_timestamps: true
  scrape_interval: 30m
  scrape_timeout: 5m
  metrics_path: /metrics
  scheme: http
  follow_redirects: true
  enable_http2: true
  static_configs:
  - targets: ['adguard.fsicardi.ar:9112']
